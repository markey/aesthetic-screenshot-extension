{
    "manifest_version": 3,
    "name": "Aesthetic Screenshot",
    "version": "1.2",
    "description": "Captures a freely selectable area of the webpage and applies an aesthetic style. Adjusts for dark mode to ensure light mode output.",
  "permissions": ["activeTab", "scripting", "tabs", "downloads", "storage", "contextMenus", "clipboardWrite"],
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png"
    }
  },
    "background": {
      "service_worker": "background.js"
    }
  }
